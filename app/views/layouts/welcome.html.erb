<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>IconLab</title>
  <meta name="title" content="Iconlab | Welcome" />
  <meta name="description" content="Acrylic polymer implants" />
  <link rel="shortcut icon" id="favicon" href="favicon.png"> 
  <%= stylesheet_link_tag 'welcome' %>
  <%= javascript_include_tag 'jquery'%>
  <%= javascript_include_tag 'interactive-bg'%>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= yield %>
  <!-- Interactive background -->
	<script>
    $(document).ready(function(){
       $(".bg").interactive_bg();
       $("#btns").interactive_bg({
         strength: 10,
         scale: 1.15,
         contain: false,
         wrapContent: true
       });
    });
    
    $(window).resize(function() {
      $(".wrapper > .ibg-bg").css({
        width: $(window).outerWidth(),
        height: $(window).outerHeight()
      })
    })
  </script>
</body>
</html>